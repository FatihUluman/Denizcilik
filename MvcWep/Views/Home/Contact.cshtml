@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MvcWep.Models.Veriler
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
    <link href="~/Content/css/agency.min.css" rel="stylesheet">
</head>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Bizimle İletişime Geç</h2>
            <h3 class="section-subheading text-muted">Lütfen Bütün Bilgileri EKsiksiz Doldurun</h3>
        </div>
    </div>
    <div class="row">

        <div class="row">
            <div class="col-md-6">
                <div>
                    <h3>Mail Adresimiz</h3>
                    <p>kaptanıderya@mail.com</p>
                </div>
                <div>
                    <h3>Telefon</h3>
                    <p>0545 123 45 45</p>
                </div>
                <div>
                    <h3>Adres</h3>
                    <p>Kaptanı Derya Mahhallesi<br />Barbaros Hayrettin Caddesi<br />Piri Reis Sokak  No:1453</p>
                </div>
            </div>
            <div class="col-md-offset-6 right">

                @using (Html.BeginForm())
                {
                    <div>
                        @Html.ValidationSummary()

                    </div>
                    <div class="form-group-lg">
                        @Html.Label("Adınız")
                        @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group-lg">
                        @Html.Label("Email Adresiniz")
                        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group-lg">

                        @Html.Label("Telefon Numaranız")
                        @Html.TextBoxFor(m => m.Tel, null, new { @class = "form-control" })
                    </div>
                    <div class="form-group-lg">
                        @Html.Label("Bize Birşeyler Yaz")
                        @Html.TextAreaFor(m => m.Yorum, new { @class = "form-control" })
                    </div>
                    <div>
                        <input id="Submit1" type="submit" value="Gönder" class="btn-xl" />
                    </div>
                    <p>@ViewBag.Mesaj</p>

                }
            </div>
        </div>
        <div>
            <div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d772431.0761515487!2d29.28996011670654!3d40.8650949530226!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cb20946fcacc43%3A0xa82cb38deb56d859!2sKocaeli!5e0!3m2!1str!2str!4v1551360950906" width="1140" height="350" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
