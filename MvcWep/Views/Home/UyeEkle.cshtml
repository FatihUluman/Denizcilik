@model MvcWep.Models.Veriler
@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2 class="section-heading">Üye Olun</h2>
            <h3 class="section-subheading text-muted">Sisteme Giriş Yapmak İçin Önce Kayıt Olun</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form name="sentMessage"
                  novalidate>
                <div class="row">
                    @using (Html.BeginForm())
                    {
                        <div>
                            @Html.ValidationSummary()

                        </div>
                        <div class="form-group-lg">
                            @Html.Label("Adınız")
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        </div>
                        <div class="form-group-lg">
                            @Html.Label("Email Adresiniz")
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group-lg">
                            @Html.Label("Tel")
                            @Html.TextBoxFor(m => m.Tel, new { @class = "form-control" })
                        </div>
                        <div class="form-group-lg">
                            @Html.Label("Şifre Giriniz")
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group-lg">
                            @Html.Label("Şifrenizi Tekrar Giriniz")
                            @Html.TextBoxFor(m => m.Password2, new { @class = "form-control" })
                        </div>
                        <div>

                            <input type="submit" value="Gönder" class="btn-xl" />
                        </div>
                        <div class="clearfix"></div>
                        <p>@ViewBag.Mesaj</p>
                        @ViewBag.Uyari

                    }
                    <div class="clearfix"></div>
                   
                </div>
            </form>
        </div>
    </div>
</div>



